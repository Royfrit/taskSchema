{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                {{#if done}}
                <a href="/task/{{_id}}/toogleDone" class="btn btn-dark">Undone</a>
                {{else}}
                <a href="/task/{{_id}}/toogleDone" class="btn btn-success">Done</a>
                {{/if}}
                <a href="/task/{{_id}}/delete" class="btn btn-danger">Delete</a>
                <a href="/task/{{_id}}/edit" class="btn btn-info">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}

<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
        <h1>No Tasks</h1>
        <img src="/icons/empty.svg" class="w-75">
    </div>
</div>

{{/if}}